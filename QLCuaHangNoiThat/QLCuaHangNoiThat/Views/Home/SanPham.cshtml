@{
    ViewBag.Title = "San Pham";

    
    var listFeatureProducts = (List<Model_Data.Framework.Product>)ViewBag.ListFeatureProducts;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="span9">

    <h4>Featured Products <small class="pull-right">200+ featured products</small></h4>

    <ul class="thumbnails">
        @foreach (var item in listFeatureProducts)
        {
            var url = "/chi-tiet/" + item.MetaTitle + " - " + item.ID;
            <li class="span3">
                <div class="thumbnail">
                    <a href="@url"><img src="@item.Image" alt="@item.Name" /></a>
                    <div class="caption">
                        <h5>@item.Name</h5>
                        <p>
                            Lorem Ipsum is simply dummy text.
                        </p>

                        <h4 style="text-align:center"><a class="btn" href="@url"> <i class="icon-zoom-in"></i></a> <a class="btn" href="/them-gio-hang?productId=@item.ID&quantity=1">Thêm vào giỏ hàng <i class="icon-shopping-cart"></i></a> <a class="btn btn-primary" href="#">@(item.Price.HasValue ? item.Price.Value.ToString("N0"):"Lien He")</a></h4>
                    </div>
                </div>
            </li>
        }
    </ul>




</div>