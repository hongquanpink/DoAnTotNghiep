@model Model_Data.Framework.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //var category = (Model_Data.Framework.ProductCategory)ViewBag.Category;
    var relatedProducts = (List<Model_Data.Framework.Product>)ViewBag.RelatedProducts;
}



